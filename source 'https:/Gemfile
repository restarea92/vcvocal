source 'https://rubygems.org'  # Ruby gem 저장소

gem 'jekyll'                   # Jekyll 핵심

group :jekyll_plugins do
  gem 'jekyll-gfm-admonitions'       # [!NOTE], [!TIP] 같은 블록 지원
  gem 'jekyll-optional-front-matter' # Front Matter 옵션 확장
  gem 'github-pages'                  # GitHub Pages 호환
end

gem 'jekyll-remote-theme'       # 원격 테마 사용
